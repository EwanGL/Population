<MyInterface>:
    canvas:
        Color:
            rgb: [1, 0, 0]
        Rectangle:
            pos: (0, 0)
            size:(self.width,self.height*0.8)

	Button:
        text: "update the population"
        pos: (100,510)
        color: 0, 0, 0, 1
        bold: False
        size_hint: [0.25,0.10]
        size:(150,100)
        background_normal:"bouton_green.png"
		background_down:"bouton_blue.png"
        on_press: root.cliquer()
            	
    Slider:
        id: cursor
        min: 0
        max: 25
        step: 1
        orientation: 'horizontal'
        size_hint: [None,None]
        size:(350,100)
		pos: (350,490)

    Label:
        text: "month : " + str(int(cursor.value))
        color: 1,0.5,0,1
        bold: True
        size_hint: [None,None]
        size:(350,180)
        pos: (550,450)