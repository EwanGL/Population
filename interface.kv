<MyInterface>:
    canvas:
        Color:
            rgb: [1, 0, 0]
        Rectangle:
            pos: (0, 0)
            size:(self.width,self.height*0.8)

	Button:
        text: "Lauch COVID-21"
        # for the joke, I call this epidemic, COVID-21
        pos: (10,510)
        color: 0, 0, 0, 1
        bold: False
        size_hint: [0.25,0.10]
        size:(150,100)
        background_normal:"button_green.png"
		background_down:"button_blue.png"
        on_press: root.cliquer()
            	
    Slider:
        id: month_cursor
        min: 0
        max: 20
        step: 1
        orientation: 'horizontal'
        size_hint: [None,None]
        size:(200,50)
		pos: (260,550)

    Label:
        text: "Month : " + str(int(month_cursor.value))
        color: 1,0.5,0,1
        bold: True
        size_hint: [None,None]
        size:(350,180)
        pos: (330,485)
    
    Slider:
        id: contamination_cursor
        min: 0.05
        max: 1
        step: 0.05
        orientation: 'horizontal'
        size_hint: [None,None]
        size:(200,50)
		pos: (260,515)

    Label:
        text: "Contamination rate : " + str(round(float(contamination_cursor.value),2))
        color: 1,0.5,0,1
        bold: True
        size_hint: [None,None]
        size:(350,180)
        pos: (360,450)
    
    Label:
        id: reponse
        color: 1,0.5,0,1
        bold: True
        size_hint: [None,None]
        size:(350,180)
        pos: (550,500)
    Label:
        id: sick
        color: 1,0.5,0,1
        bold: True
        size_hint: [None,None]
        size: (350,180)
        pos: (550, 475)
    Label:
        id: healthy_carrier
        color: 1,0.5,0,1
        bold: True
        size_hint: [None,None]
        size: (350,180)
        pos: (550, 450)
    Label:
        id: infected
        color: 1,0.5,0,1
        bold: True
        size_hint: [None,None]
        size: (350,180)
        pos: (550, 425)