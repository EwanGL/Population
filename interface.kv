<MyInterface>:
    canvas:
        Color:
            rgb: [1, 1, 1]
        Rectangle:
            pos: (0, 0)
            size:(self.width,self.height*0.8)

	Button:
        text: "Lauch COVID-21"
        # for the joke, I call this epidemic, COVID-21
        color: 0, 0, 0, 1
        bold: False
        size_hint: [0.25, 0.15]
        pos_hint: {"x": 0.05, "top":0.98}
        # size:(150,100)
        background_normal:"button_green.png"
		background_down:"button_blue.png"
        on_press: root.cliquer()
            	
    Slider:
        id: month_cursor
        min: 0
        max: 12
        step: 1
        orientation: 'horizontal'
        size_hint: [0.25, 0.18]
        # size:(200,50)
		pos_hint: {"x":0.35, "top":1}

    Label:
        text: "Month : " + str(int(month_cursor.value))
        color: 1,0.5,0,1
        bold: True
        size_hint: [0.15, 0.1]
        # size:(350,180)
        pos_hint: {"x":0.60, "top":0.96}
    
    Label:
        id: reponse
        color: 1,0.5,0,1
        bold: True
        size_hint: [0.12, 0.05]
        # size:(350,180)
        pos_hint: {"x":0.85, "top":1}
    Label:
        id: sick
        color: 1,0.5,0,1
        bold: True
        size_hint: [0.12, 0.05]
        # size: (350,180)
        pos_hint: {"x":0.85, "top":0.95}
    Label:
        id: healthy_carrier
        color: 1,0.5,0,1
        bold: True
        size_hint: [0.12, 0.05]
        # size: (350,180)
        pos_hint: {"x":0.85, "top":0.90}
    Label:
        id: infected
        color: 1,0.5,0,1
        bold: True
        size_hint: [0.12, 0.05]
        # size: (350,180)
        pos_hint: {"x":0.85, "top":0.85}